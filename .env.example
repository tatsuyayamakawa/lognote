# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Site Configuration
# 本番環境のURL（シェアボタンやOG画像で使用）
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Google Tag Manager
# GTMのコンテナIDを設定してください (例: GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics 4 (Optional - for admin dashboard analytics)
# GA4プロパティIDとサービスアカウント認証情報
GA4_PROPERTY_ID=123456789
# ローカル開発: JSONファイルパス
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# 本番環境(Vercel): JSON文字列
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Google Search Console (Optional - for admin dashboard keywords)
# Search Consoleのプロパティタイプ: "url-prefix" (デフォルト) または "domain"
SEARCH_CONSOLE_PROPERTY_TYPE=url-prefix
